{
  "$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "style": {
        "noImplicitBoolean": "off",
        "useNamingConvention": "off"
      }
    }
  },
  "files": {
    "ignore": ["./src/routeTree.gen.ts", "./src-tauri/**/*"]
  },
  "overrides": [
    {
      "include": ["./*.config.ts", "./*.config.js"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    },
    {
      "include": ["./src/routes/**/*.tsx"],
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": "off"
          }
        }
      }
    }
  ],
  "javascript": {
    "globals": ["React"]
  }
}
